FRONTEND DOCKERFILE:

FROM ubuntu:18.04

EXPOSE 5000

WORKDIR /usr/src/app

COPY . .

RUN apt-get update && apt-get install -y curl

RUN curl -sL https://deb.nodesource.com/setup_14.x | bash -
RUN apt install -y nodejs

RUN npm install

RUN REACT_APP_BACKEND_URL=http://localhost:8080 npm run build

RUN npm install -g serve

ENTRYPOINT ["serve", "-s", "-l", "5000", "build”]



BACKEND DOCKERFILE:

FROM golang:1.16

WORKDIR /usr/src/app

EXPOSE 8080

COPY go.mod .

COPY go.sum .

RUN go mod download

COPY . .

RUN go test ./...

RUN go build -o ./server .


CMD ["./server”]


FRONTEND COMMANDS:

docker build -t front . && docker run -p 5000:5000 front



BACKEND COMMANDS:

docker build -t back . && docker run -p 8080:8080 -e REQUEST_ORIGIN=http://localhost:5000 back

